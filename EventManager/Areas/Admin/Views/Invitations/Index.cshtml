@model IEnumerable<EventManager.Areas.Admin.Models.Invitation>

@{
    ViewBag.Title = "Index";
}

<h3 class="centered">INVITATIONS</h3>

<table class="table">
    <tr>
        <th>
           <p>@Html.DisplayNameFor(model => model.Name)</p>
        </th>
        <th>
           <p>@Html.DisplayNameFor(model => model.Email)</p>
        </th>
        <th>
           <p>@Html.DisplayNameFor(model => model.InvitationCode)</p>
        </th>
        <th>
           <p>@Html.DisplayNameFor(model => model.Active)</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvitationCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.ActionLink("Delete Invitation", "Delete", new { id=item.ID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
<div class="centered">
    @Html.ActionLink("NEW INVITATION", "New", null, new {@class = "btn btn-warning"})
</div>