@model dynamic

@{
    ViewBag.Title = "Admin Login";
}

<h2>Admin Login</h2>

@using (Html.BeginForm("Index", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <input type="text" placeholder="Username" name="adminUsername" class="form-control" />
        </div>

        <div class="form-group">
            <input type="password" placeholder="Password" name="adminPassword" class="form-control" />

        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
    </div>
}
