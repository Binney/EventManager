@model dynamic

@{
    ViewBag.Title = "Admin Login";
}

<div class="centered">
<h2 class="centered">Admin Login</h2>

@using (Html.BeginForm("Index", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            <input type="text" placeholder="Username" name="adminUsername" class="form-control"/>
        </div>

        <div class="form-group">
            <input type="password" placeholder="Password" name="adminPassword" class="form-control"/>

        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-default centered"/>
        </div>
    </div>
}
</div>