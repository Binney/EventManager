@using EventManager.Services
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

 <body data-spy="scroll" data-offset="0" data-target="#theMenu">

        <!-- Menu -->
    <nav class="menu" id="theMenu">
        <div class="menu-wrap">
            <h1 class="logo">@Html.ActionLink("HappnIn", "Index", "Home")</h1>
            <i class="icon-remove menu-close"></i>
            @if (UserService.IsAdmin())
            {
                @Html.ActionLink("Events", "Index", "Events")
                @Html.ActionLink("Invitations", "Index", "Invitations")
            }
            else if (UserService.IsInvitedUser())
            {
                @Html.ActionLink("Your Booking", "Index", "Home")
                @Html.ActionLink("Upcoming Events", "Upcoming", "Home")
            }
            else
            {
                @Html.ActionLink("Admin Login", "Index", "Admin")
                @Html.ActionLink("User Login", "Index", "Home",  new { Area = "" }, null)
            }
        </div>

        <!-- Menu button -->
        <div id="menuToggle"><i class="icon-reorder"></i></div>
    </nav>
        
        <div class="container body-content">
            @RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
